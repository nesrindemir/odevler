package odev_1;
import java.util.Scanner;
public class UcakBileti {

	public static void main(String[] args) {

//değişkenleri belirtelim.
		int mesafe,yas;
		int yolculukTipi;
		double normalTutar;
		double ucretOarnı=0.10;
		double yasIdirimOrani,yasIndirimi,indirimliTutar,gdbIndirimi,toplamTutar,gdbOranı;
		
		
		Scanner  input= new Scanner(System.in);
		
		System.out.print("Mesafeyi km türünden giriniz : ");
		
		mesafe=input.nextInt();
		
		System.out.print("Yaşınızı giriniz : ");
		yas=input.nextInt();
		
		System.out.print("Yolculuk tipini giriniz :");
		yolculukTipi=input.nextInt();//1 tekyön 2 gidiş-dönüş
		
		
		if((mesafe>0 && yas>0)&& (yolculukTipi==1 ||yolculukTipi==2)) {
			
		normalTutar=mesafe*ucretOarnı;
		System.out.println("Normal Tutar :" + normalTutar );
		
		if(yas<=12) {
			yasIdirimOrani=0.50;
		}else if(yas>12 && yas <=24) {
			yasIdirimOrani=0.10;
		}else if(yas>65) {
			yasIdirimOrani=0.30;
			
		}else {
			
			yasIdirimOrani=0;
		}
		
		if(yolculukTipi==2) {
			
			gdbOranı=0.20;
		}else {
			
			gdbOranı=0;
		}
		
		yasIndirimi=normalTutar*yasIdirimOrani;
		System.out.println("Yaş indirimi :"+yasIndirimi);
		indirimliTutar=normalTutar-yasIndirimi;
		System.out.println("İndrimli Tutar :"+indirimliTutar);
		
		gdbIndirimi=indirimliTutar*gdbOranı;
		System.out.println("Gidiş Dönüş Bilet indirimi :"+gdbIndirimi);
		
		toplamTutar=(indirimliTutar-gdbIndirimi)*yolculukTipi;
		System.out.println("Toplam Tutar :"+toplamTutar);
		
		
		}else {
			
			System.out.println("Hatalı Veri Girdiniz!"  );
		}
		
	}

}
