
import java.util.Scanner;

public class SıfreSıfırlama {

	public static void main(String[] args) {
     String username,password,hataliPassword;
     
     Scanner input= new Scanner(System.in);
     
     System.out.print("Kullanıcı adınız: ");
      username=input.nextLine();
      
      System.out.print("Şifreniz: ");
      password=input.nextLine();
      
     if(username.equals("patika")&&password.equals("java123")) {
    	 System.out.println("Giriş yaptınız!");
    	 
     }else {
    		 System.out.println("Bilgileriniz yanlış!");
    		 System.out.println("şifrenizi sıfırlamak istiyor musunuz?");
    	String cevap,yeniSifre;
    	
    	cevap=input.nextLine();
    	yeniSifre=input.nextLine();
    	hataliPassword =input.nextLine();
    			
    	 if(cevap.equals("evet")) {
    		 if(password.equals(yeniSifre)||hataliPassword.equals(yeniSifre)) {
    			 System.out.println("Şifre oluşturulamadı, lütfen başka şifre giriniz.");
    		 }else {
    			 
    			 System.out.println("Şifre oluşturuldu");
    		 }
    		 
    		 
    		 
    	 }
    	 }
    	 
    	 
    	 
    	 
    	 
     }
		
		
		

	}


